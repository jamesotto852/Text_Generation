\newcommand{\BTA}[2]{\mathrm{B} \left(#1, \ #2 \right)}
\newcommand{\CSQ}[1]{\chi^2_{#1}}
\newcommand{\EXP}[1]{\mathrm{Exp} \left( #1 \right)}
\newcommand{\UNI}[2]{\mathrm{Unif} \left(#1, \ #2 \right)}
\newcommand{\POI}[1]{\mathrm{Pois} \left( #1 \right)}
\newcommand{\BIN}[2]{\mathrm{Bin}\left(#1, \ #2 \right)}
\newcommand{\WSH}[3]{\mathrm{W}_{#1} \left(#2, \ #3 \right)}
\newcommand{\NPDF}[4]{
\frac{1}{(2\pi)^{\frac{#1}{2}} \det{#3}^{\frac{1}{2}}}
\Exp{-\frac{1}{2}\t{\left( #4 - #2 \right)} \inv{#3} \left( #4 - #2 \right)}
}

